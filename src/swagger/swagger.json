                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Note archived Successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
