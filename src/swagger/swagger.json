        "/users/register": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "New user registration",
                "parameters": [
                    {
                        "name": "Create User",
                        "in": "body",
                        "description": "Register",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User Created Successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "User login",
                "parameters": [
                    {
                        "name": "Login",
                        "in": "body",
                        "description": "Registered user can Login",
                        "schema": {
                            "$ref": "#/definitions/LoginUser"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "User Login Successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/forgotpwd": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Forgot Password",
                "parameters": [
                    {
                        "name": "Forgot password",
                        "in": "body",
                        "description": "requesting for new password",
                        "schema": {
                            "$ref": "#/definitions/ForgotPwd"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "link to reset password sent to your email"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/resetpwd": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "Reset New Password",
                "parameters": [
                    {
                        "name": "Reset password",
                        "in": "body",
                        "description": "resetting for new password",
                        "schema": {
                            "$ref": "#/definitions/ResetPwd"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Password updated successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/notes": {
            "post": {
                "tags": [
                    "Notes"
                ],
                "description": "New note creation",
                "parameters": [
                    {
                        "name": "Note",
                        "in": "body",
                        "description": "Create Note",
                        "schema": {
                            "$ref": "#/definitions/CreateNote"
                        }
                    }
