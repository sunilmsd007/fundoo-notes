{
    "swagger": "2.0",
    "info": {
        "version": "v1",
        "title": "Fundoo Notes",
        "description": "Fundoo Notes CLI"
    },
    "host": "localhost:4000",
    "basePath": "/api/v1/",
    "tags": [
        {
            "name": "CLI",
            "description": "Creating user"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
