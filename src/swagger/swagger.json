        "/notes/{_id}/isArchive": {
            "put": {
                "tags": [
                    "Notes"
                ],
                "description": "Update archive status of a note by id",
                "parameters": [
                    {
                        "name": "_id",
                        "description": "Archive a Note",
                        "in": "path",
                        "required": true,
