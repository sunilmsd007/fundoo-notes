                "tags": [
                    "Notes"
                ],
                "description": "Delete a note by id",
                "parameters": [
                    {
                        "name": "_id",
                        "description": "Delete a particular Note",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Note updated Successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
