        "/notes/{_id}/isTrash": {
            "put": {
                "tags": [
                    "Notes"
                ],
                "description": "Update trash status of a note by id",
                "parameters": [
                    {
                        "name": "_id",
                        "description": "Trash a Note",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "202": {
                        "description": "Note trashed Successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
